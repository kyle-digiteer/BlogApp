<section class="h-100 mt-5 mb-5">
  <div class="container h-100">
    <div class="row justify-content-sm-center h-100">
      <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h1 class="fs-4 card-title fw-bold mb-4">Register</h1>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="mb-3">
                <%= f.label :first_name, class:"mb-2 text-muted" %><br />
                <%= f.text_field :first_name, class:"form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :last_name, class:"mb-2 text-muted" %><br />
                <%= f.text_field :last_name, class:"form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :email, class:"mb-2 text-muted" %><br />
                <%= f.email_field :email, class:"form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :password, class:"mb-2 text-muted" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :password_confirmation, class:"mb-2 text-muted" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
              </div>
              <p class="form-text text-muted mb-3">
                By registering you agree with our terms and condition.
              </p>
              <div class="align-items-center d-flex">
                <%= f.submit "Submit", class:"btn btn-primary ms-auto"  %>
              </div>
            <% end %>
          </div>
          <div class="card-footer py-3 border-0">
            <div class="text-center">
              Already have an account?
              <%- if controller_name != 'sessions' %>
                <%= link_to "Log in", new_session_path(resource_name), class:"text-dark" %><br />
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
