<section class="h-100 mt-5">
  <div class="container h-100">
    <div class="row justify-content-sm-center h-100">
      <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <% if alert %>
              <div class="d-flex justify-content-center align-items-center">
                <p class="text-danger"><%= alert %></p>
              </div>
            <% end %>
            <h1 class="fs-4 card-title fw-bold mb-4">Login</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="mb-3">
                <%= f.label :email, class:"mb-2 text-muted" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
              </div>
              <div class="mb-3">
                <div class="d-flex align-items-center justify-content-between mb-2 w-100">
                  <%= f.label :password, class:"text-muted" %><br />
                  <div>
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot Password?", new_password_path(resource_name), class:"float-end" %><br />
                    <% end %>
                  </div>
                </div>
                <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
              </div>
              <div class="d-flex align-items-center">
                <div class="form-check">
                  <% if devise_mapping.rememberable? %>
                    <%= f.check_box :remember_me,  class:"form-check-input" %>
                    <%= f.label :remember_me , class: "form-check-label"%>
                  <% end %>
                </div>
                <%= f.submit "Log in", class:"btn btn-primary ms-auto"  %>
              </div>
            <% end %>
          </div>
          <div class="card-footer py-3 border-0">
            <div class="text-center">
              Don't you have an account?
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Create One", new_registration_path(resource_name), class:"text-dark" %><br />
              <% end %>
            </div>
          </div>
        </div>
        <div class="text-center mt-5 text-muted">
          Copyright &copy; 2017-2021 &mdash; Your Company 
        </div>
      </div>
    </div>
  </div>
</section>